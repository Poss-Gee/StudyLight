rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Get a user document to check their role
    function isTeacher(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'teacher';
    }

    // User profiles can be created by anyone, but only the owner can read or update their own profile.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Subjects can be read by any authenticated user.
    // Only teachers can create, update, or delete subjects.
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacher(request.auth.uid);
    }
    
    // Notes can be read by any authenticated user.
    // Only teachers can create, update, or delete notes.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacher(request.auth.uid);
    }

    // Quizzes can be read by any authenticated user.
    // Only teachers can create, update, or delete quizzes.
    match /quizzes/{quizId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacher(request.auth.uid);
    }
  }
}
